---
import "@/styles/globals.css";
import { ViewTransitions } from "astro:transitions";
import Logo from "@/components/Logo.astro";
interface Props {
	title: string;
	description: string;
	image?: string;
	canonicalURL?: string;
	lastUpdated?: string;
	type?: "website" | "article";
	reader?: boolean;
}

const {
	title,
	description,
	image = "/default-og-image.png",
	canonicalURL,
	type = "website",
	lastUpdated,
	reader = false,
} = Astro.props;

// Fallback for canonicalURL if not provided
const siteURL = Astro.site
	? new URL(Astro.url.pathname, Astro.site)
	: Astro.url;
const finalCanonicalURL = canonicalURL || siteURL.href;

// 
const footerClass = "relative bottom-0 bg-[--background] flex flex-col items-center w-full min-h-12 border-gray-800 border-t-2 mt-8" 

---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Aleo:ital,wght@0,100..900;1,100..900&display=swap"
	rel="stylesheet"
/>
<meta name="last-modified" content={lastUpdated} />
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- Sitemap -->
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- View Transitions -->
		<ViewTransitions />
	</head>
	<!-- <script
		defer
		src="https://analytics.us.umami.is/script.js"
		data-website-id="bc790383-ce63-4879-821d-609367c7ff19"></script> -->
	<main>
		<body>
			<nav class="flex h-20 p-6 justify-center md:justify-between">
				<div class="w-72">
					<a class="m-0 p-0" href="/">
						<div class="m-0 p-0">
							<Logo />
						</div>
					</a>
				</div>
				<!-- <div class="bg-blue-600">right</div> -->

						
			</nav>
				{reader?
				<div class="m-16 p-4 leading-relaxed reader">
						<slot />
				</div>
			
				:
				<slot />
			     }
			<footer class={footerClass} >
			<div class="flex flex-wrap justify-center max-w-xl ">
				<a href="/" class="flex justify-center p-6 text-white">about us</a>
				<a href="/" class="flex justify-center p-6 text-white">roadmap</a>
				<a href="/" class="flex justify-center p-6 text-white">privacy</a>
				<a href="/" class="flex justify-center p-6 text-white">terms</a>
				<a href="/" class="flex justify-center p-6 text-white">contact</a>
			</div>
				<div class="flex justify-center w-full p-6 mt-1">
					<p class="text-white text-center text-xs">
						Â© {new Date().getFullYear()} Unum Examen. All rights reserved.
					</p>
				</div>
			</div>
			</footer>
		</body>
	</main>
</html>
