---
import Layout from "@/layouts/Layout.astro";
---
<Layout title="Page not found" description="" stickyFooter={true}>
    <div class="text-center w-full mt-4 lg:mt-24 p-8">
        <h1 class="text-center text-3xl font-bold">
            404: Page Not Found
        </h1>
        <p class="text-center text-lg mt-4">The page you are looking for does not exist.</p>
    </div>
    <div class="w-full flex justify-center mt-4 mb-4">
        <a class="border-2 rounded-xl p-6" href="/" class="text-center text-lg mt-4">Return to Home</a>
    </div>
</Layout>